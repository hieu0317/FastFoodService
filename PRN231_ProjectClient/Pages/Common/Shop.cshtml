@page
@model PRN231_ProjectClient.Pages.Common.ShopModel
@{
}
<section class="breadcrumb-section set-bg mb-5" data-setbg="../images/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>VMH Shop</h2>
                    <div class="breadcrumb__option">
                        <a asp-page="/Index">Home</a>
                        <span>Shop</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="hero hero-normal">
    <div class="container">
        <div class="hero__search__form" style="margin-left: 250px;">
            <form method="post" asp-page-handler="Search">
                <div class="hero__search__categories">
                    All Categories
                    <span class="arrow_carrot-down"></span>
                </div>
                <input type="text" name="productName" placeholder="What do yo u need?">
                <input type="hidden" name="categoryId" value="@Model.categoryId" />
                <input type="hidden" name="pageNum" value="@Model.pageNum" />
                <input type="hidden" name="sortBy" value="@Model.sortBy" />
                <button type="submit" class="site-btn">SEARCH</button>
            </form>
        </div>
        <div class="hero__search__phone">
            <div class="hero__search__phone__icon">
                <i class="fa fa-phone"></i>
            </div>
            <div class="hero__search__phone__text">
                <h5>+65 11.188.888</h5>
                <span>support 24/7 time</span>
            </div>
        </div>
    </div>
</section>

<section class="product spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-5">
                <div class="sidebar">
                    <div class="sidebar__item">
                        <h4>Category</h4>
                        <ul>
                            @foreach (var item in Model.lstCategory.Categories)
                            {
                                <li>
                                    <a asp-page="/Common/Shop"
                                       asp-route-categoryId="@item.CategoryId"
                                       asp-route-pageNum="1"
                                       asp-route-productName="@Model.productName"
                                       asp-route-sortBy="@Model.sortBy">@item.CategoryName</a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-lg-9 col-md-7">
                <div class="filter__item">
                    <div class="row">
                        <div class="col-lg-4 col-md-5">
                            <div class="filter__sort">
                                <span>Sort By</span>
                                <form id="myForm" method="post">
                                    <select name="sortBy" onchange="submitForm()">
                                        <option>Default</option>
                                        <option value="price">Price</option>
                                    </select>
                                    <input type="hidden" name="productName" value="@Model.productName">
                                    <input type="hidden" name="categoryId" value="@Model.categoryId" />
                                    <input type="hidden" name="pageNum" value="@Model.pageNum" />
                                </form>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-4">
                            <div class="filter__found">
                                <h6><span>@Model.totalProductFound</span> Food found</h6>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-3">
                            <div class="filter__option">
                                <span class="icon_grid-2x2"></span>
                                <span class="icon_ul"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    @foreach (var item in Model.lstProduct.Products)
                    {
                        <div class="col-lg-4 col-md-6 col-sm-6">
                            <div class="product__item">
                                <div class="product__item__pic set-bg" data-setbg="../@item.ImageUrl">
                                    <ul class="product__item__pic__hover">
                                        <li><a href="#"><i class="fa fa-heart"></i></a></li>
                                        <li><a asp-page="/Common/ProductDetail" asp-route-productId="@item.ProductID"><i class="fa fa-shopping-cart"></i></a></li>
                                    </ul>
                                </div>
                                <div class="product__item__text">
                                    <h6><a href="#">@item.ProductName</a></h6>
                                    <h5>@item.Price VND</h5>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div class="product__pagination">
                    @for (int i = 1; i <= Model.totalPage; i++)
                    {
                        <a asp-page="/Common/Shop"
                           asp-route-pageNum="@i"
                           asp-route-categoryId="@Model.categoryId"
                           asp-route-productName="@Model.productName"
                           asp-route-sortBy="@Model.sortBy">@i</a>
                    }
                    <a asp-page="/Common/Shop" asp-route-pageNum="@(Model.pageNum + 1)"><i class="fa fa-long-arrow-right"></i></a>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    function submitForm() {
        document.getElementById('myForm').submit();
    }
</script>