@page
@model PRN231_ProjectClient.Pages.Customer.CartModel
@{
}

<section class="shoping-cart spad">
    <div class="container">
    <form method="post">
        <div class="row">
            <div class="col-lg-12">
                <div class="shoping__cart__table">
                    <table>
                        <thead>
                            <tr>
                                <th class="shoping__product">Products</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Total</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model.lstCart.Cart)
                            {
                                <tr>
                                    <td class="shoping__cart__item">
                                        <img src="../@item.Product.ImageUrl" alt="" style="width:150px;height:150px;">
                                        <h5>@item.Product.ProductName</h5>
                                    </td>
                                    <td class="shoping__cart__price">
                                        @item.Product.Price VND
                                    </td>
                                        <input type="hidden" name="productId" value="@item.ProductId" />
                                    <td class="shoping__cart__quantity">
                                        <div class="quantity">
                                            <div class="pro-qty">                                              
                                                <input type="text" name="quantity" value="@item.Quantity">
                                            </div>
                                        </div>
                                    </td>
                                    <td class="shoping__cart__total">
                                        @(item.Quantity * item.Product.Price) VND
                                    </td>
                                    <td class="shoping__cart__item__close">
                                        <a asp-page="/Customer/Cart" asp-route-productId="@item.ProductId" asp-page-handler="Delete"><span class="icon_close"></span></a>
                                    </td>
                                </tr>                         
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="shoping__cart__btns">
                    <a asp-page="/Common/Shop" class="primary-btn cart-btn">CONTINUE SHOPPING</a>
                    <input type="submit" class="primary-btn cart-btn cart-btn-right" value="Update Cart">
                </div>
            </div>
            <div class="col-lg-6">
                <div class="shoping__checkout">
                    <h5>Cart Total</h5>
                    <ul>
                        <li>Subtotal <span>@Model.lstCart.Cart.Sum(c => c.Quantity * c.Product.Price) VND</span></li>
                        <li>Total <span>@Model.lstCart.Cart.Sum(c => c.Quantity * c.Product.Price) VND</span></li>
                    </ul>
                    <a asp-page="/Customer/CheckOut" class="primary-btn">PROCEED TO CHECKOUT</a>
                </div>
            </div>
        </div>
    </form>
    </div>
</section>